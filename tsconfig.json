{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "model": ["packages/model/src"],
      "model/*": ["packages/model/src/*"],
      "dal": ["packages/dal/src"],
      "dal/*": ["packages/dal/src/*"]
    }
  },
  "exclude": ["node_modules"]
}
